<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbaf3f">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/LogoImageViewBurpee"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:src="@drawable/logo"
        android:scaleY="2.0"
        android:scaleX="2.0"
        android:contentDescription="@string/logo" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/BurpeeImageView"
        android:layout_below="@+id/LogoImageViewBurpee"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/burpee"
        android:scaleX="2"
        android:scaleY="2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Large Text"
        android:id="@+id/BurpeeOnlytextView"
        android:layout_below="@+id/BurpeeImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textColor="#FFFFFF"
        />


</RelativeLayout>