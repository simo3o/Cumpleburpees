<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbaf3f">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/LogoImageViewDU"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:src="@drawable/logo"
        android:scaleY="2.0"
        android:scaleX="2.0"
        android:contentDescription="cumpleburpees logo" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/BurpeeImageView"
        android:layout_marginTop="100dp"
        android:src="@drawable/burpee"
        android:layout_below="@+id/LogoImageViewDU"
        android:layout_alignLeft="@+id/LogoImageViewDU"
        android:layout_alignStart="@+id/LogoImageViewDU" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Large Text"
        android:id="@+id/BurpeeTextView"
        android:layout_marginTop="60dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/BurpeeImageView"
        android:layout_alignLeft="@+id/BurpeeImageView"
        android:layout_alignStart="@+id/BurpeeImageView" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/DuImageView"
        android:src="@drawable/doubleunder"
        android:scaleX="2"
        android:scaleY="2"
        android:layout_alignTop="@+id/BurpeeImageView"
        android:layout_alignRight="@+id/LogoImageViewDU"
        android:layout_alignEnd="@+id/LogoImageViewDU" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Large Text"
        android:id="@+id/DUtextView"
        android:textColor="#FFFFFF"
        android:layout_alignBottom="@+id/BurpeeTextView"
        android:layout_alignRight="@+id/DuImageView"
        android:layout_alignEnd="@+id/DuImageView" />


</RelativeLayout>